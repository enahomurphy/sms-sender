{
  "root": true,
  "extend": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "jasmine": true,
    "jquery": true
  },
  "rules": {
    "quotes": [2, "single"],
    "semi":[2,"always"],
    "import/no-unresolved": 0,
    "one-var": 0,
    "indent": [2, 2],
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "max-len": [2, 80, 2],
    "curly": [1, "multi-line"],
    "no-shadow": [1, {
      "allow": ["req", "res", "err"]
    }],
    "valid-jsdoc": [1, {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": false,
      "requireReturnDescription": true
    }],
    "require-jsdoc": [1, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }]
  }
}